<!DOCTYPE html>
<html lang="es">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link href="/css/bootstrap.min.css" rel="stylesheet">
    <title>Lista de productos</title>
</head>
<body>
    <div class="container">
        <h3 class="fs-2 text-primary my-4 py-4">Vistas de productos</h3>

        <form action="/productos" method="post">
            <div class="d-grid gap-2 col-6 mx-auto my-4 py-4">
                <button type="submit" class="btn btn-outline-success btn-lg">Cargar producto</button>
            </div>
        </form>

        <% if (isEmpty) { %>
            <p class="p-3 mb-2 bg-warning text-dark">No se encontraron productos.</p>
        <% } else { %>
            <table class="table table-dark table-hover">
                <thead>
                    <tr>
                        <th scope="col">Nombre</th>
                        <th scope="col">Precio</th>
                        <th scope="col">Foto</th>
                    </tr>
                </thead>
                <tbody>
                    <% productos.forEach( prod=> { %>
                        <tr>
                            <td>
                                <%= prod.title %>
                            </td>
                            <td>
                                $<%= prod.price %>
                            </td>
                            <td>
                                <img src="<%= prod.thumbnail%>" alt="<%= prod.title %>" width="32" height="32" />
                            </td>
                        </tr>
                        <% }) %>
                </tbody>
            </table>
        <% } %>
    </div>
    <script src="/js/bootstrap.bundle.min.js"></script>
</body>
</html>