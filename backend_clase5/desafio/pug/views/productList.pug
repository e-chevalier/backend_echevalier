doctype html
html(lang='es')
    head
        meta(charset="UTF-8")
        meta(http-equiv="X-UA-Compatible" content="IE=edge")
        meta(name="viewport" content="width=device-width, initial-scale=1.0")
        link(href="/css/bootstrap.min.css" rel="stylesheet")
        title='Lista de productos'

    body

        div(class="container")
            h3(class="fs-2 text-primary my-4 py-4")='Vistas de productos'

            form(action="/productos" method="post")
                div(class="d-grid gap-2 col-6 mx-auto my-4 py-4")
                    button(type="submit" class="btn btn-outline-success btn-lg")='Cargar producto'
            
            if isEmpty
                p(class="p-3 mb-2 bg-warning text-dark")='No se encontraron productos.'
            else
                table(class="table table-dark table-hover")
                    thead
                        tr
                            th(scope="col")='Nombre'
                            th(scope="col")='Precio'
                            th(scope="col")='Foto'
                    tbody
                        each val in productos
                            tr
                                td=val.title
                                td='$' + val.price
                                td
                                    img(src=val.thumbnail alt=val.title width="32" height="32")
                        
                