{{!-- chat.hbs --}}

<div class="container bg-light mb-3">
    <div class="fs-1 text-primary">Centro de Mensajes - Reducci√≥n: <span id="porcentual"></span></div>
    <div class="my-2 py-2">
        <form>
            <div class="mb-3">

                <div class="pb-3">
                    <label for="email" class="form-label">Email :</label>
                    <input type="email" name="email" class="form-control" id="email" aria-describedby="emailHelp"
                        placeholder="sophie@example.com" required>
                    <div class="valid-feedback">
                        Parece correcto!
                    </div>
                    <div class="invalid-feedback">
                        Por favor ingresa un email correcto.
                    </div>
                </div>

                <div class="pb-3">
                    <label for="name" class="form-label">Nombre :</label>
                    <input type="text" name="name" class="form-control" id="name" aria-describedby="nameHelp"
                        placeholder="John" required>
                    <div class="valid-feedback">
                        Parece correcto!
                    </div>
                    <div class="invalid-feedback">
                        Por favor ingresa un nombre correcto.
                    </div>
                </div>

                <div class="pb-3">
                    <label for="surname" class="form-label">Apellido :</label>
                    <input type="text" name="surname" class="form-control" id="surname" aria-describedby="surnameHelp"
                        placeholder="Doe" required>
                    <div class="valid-feedback">
                        Parece correcto!
                    </div>
                    <div class="invalid-feedback">
                        Por favor ingresa un apellido correcto.
                    </div>
                </div>

                <div class="pb-3">
                    <label for="age" class="form-label">Edad :</label>
                    <input type="number" name="age" class="form-control" id="age" aria-describedby="ageHelp"
                        placeholder="25" required>
                    <div class="valid-feedback">
                        Parece correcto!
                    </div>
                    <div class="invalid-feedback">
                        Por favor ingresa un edad correcta.
                    </div>
                </div>
                <div class="pb-3">
                    <label for="alias" class="form-label">Alias :</label>
                    <input type="text" name="alias" class="form-control" id="alias" aria-describedby="aliasHelp"
                        placeholder="SpiderMan" required>
                    <div class="valid-feedback">
                        Parece correcto!
                    </div>
                    <div class="invalid-feedback">
                        Por favor ingresa un alias correcto.
                    </div>
                </div>

                <div class="pb-3">
                    <label for="avatar" class="form-label">avatar :</label>
                    <input type="text" name="avatar" class="form-control" id="avatar" aria-describedby="avatarHelp"
                        placeholder="avatar url" required>
                    <div class="valid-feedback">
                        Parece correcto!
                    </div>
                    <div class="invalid-feedback">
                        Por favor ingresa una url correcta.
                    </div>
                </div>

            </div>
            <hr>
            <div class="py-2 my-2" id="lastMessage"></div>

            <div class="mb-3">
                <label for="message" class="form-label">Mensaje :</label>
                <input type="text" name="message" class="form-control" id="message" aria-describedby="messageHelp"
                    required>
                <div class="valid-feedback">
                    Parece correcto!
                </div>
                <div class="invalid-feedback">
                    Por favor ingresa un mensaje.
                </div>
            </div>

            <button id="btnChat_submit" class="btn btn-primary" type="submit" disabled>Enviar</button>
        </form>

    </div>
</div>